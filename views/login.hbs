{{> welcomemenu id='login' }}

<div style="margin: 1rem;">
  <a href="/" class="ui button"><i class="arrow left icon"></i> Back</a>
</div>

<form class="ui stacked segment form" action="/authenticate" method="POST">
  <h3 class="ui header">Log-in</h3>
  <div class="field">
    <label for="username">Username</label>
    <input placeholder="Username" type="text" name="username" autofocus required>
  </div>
  <div class="field">
    <label for="password">Password</label>
    <input placeholder="Password" type="password" name="password" required>
  </div>
  <button class="ui blue submit button">Login</button>
</form>
