{{> menu}} <!-- Include the navigation menu -->

<section class="ui center aligned middle aligned segment">
  
  <!-- Check if the Recipe Exists -->
  {{#if singleRecipe}}

    <!-- Recipe Name -->
    <h2 class="ui header">{{singleRecipe.recipeName}}</h2>

    <!-- Recipe Description and Ingredients -->
    <div class="ui container">
      <div class="ui left aligned segment">

        <!-- Recipe Description -->
        <p><i>{{singleRecipe.recipeDescription}}</i></p>

        <!-- Ingredients List -->
        <strong>Ingredients:</strong>
        <p class="ui text">
          {{#each singleRecipe.ingridients}}
            {{this}}{{#unless @last}}, {{/unless}} <!-- Adds a comma unless it's the last item -->
          {{/each}}
        </p>

      </div>
    </div>

    <!-- Cooking Process Section -->
    <div class="ui container">
      <h3 class="ui header">Cooking Process</h3>
      <div class="ui relaxed divided list">
        {{#each singleRecipe.cookingProcess}}
          <div class="ui grid">
            <div class="two column row">

              <!-- Step Number (Circular Label) -->
              <div class="column" style="max-width: 50px;">
                <div class="ui circular label">{{step}}</div>
              </div>

              <!-- Step Description -->
              <div class="column left aligned">
                <p>{{stepDescription}}</p>
              </div>

            </div>
          </div>
        {{/each}}
      </div>
    </div>

  {{else}}

    <!-- Message When Recipe Is Not Found -->
    <h3>There is no recipe with this ID</h3>

    <!-- Suggest User to Search for Another Recipe -->
    <div class="ui grid">
      <div class="two column row">

        <!-- Prompt Text -->
        <div class="column left aligned">
          <p>Would you like to search for another?</p>
        </div>

        <!-- Button to Navigate to Catalogue -->
        <div class="column right aligned">
          <a href="/catalogue" class="ui button">
            Go to Catalogue
          </a>
        </div>

      </div>
    </div>

  {{/if}}

</section>

{{> footer}} <!-- Include the footer -->
