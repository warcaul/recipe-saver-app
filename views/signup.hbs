{{> welcomemenu}}

{{#if error}}
  <div class="ui negative message">
    {{#ifeq error "username"}}Username is already taken.{{/ifeq}}
    {{#ifeq error "email"}}Email is already registered.{{/ifeq}}
  </div>
{{/if}}


<div style="margin: 1rem;">
  <a href="/" class="ui button"><i class="arrow left icon"></i> Back</a>
</div>

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>

  <div class="two fields">
    <div class="field">
      <label for="firstName">First Name</label>
<input placeholder="First Name" type="text" name="firstName" value="{{firstName}}" autofocus required>
    </div>
    <div class="field">
      <label for="lastName">Last Name</label>
      <input placeholder="Last Name" type="text" value="{{lastName}}" name="lastName" required>
    </div>
  </div>

  <div class="field">
    <label for="email">Email</label>
    <input placeholder="Email" type="email" value="{{email}}" name="email" required>
  </div>

  <div class="field">
    <label for="username">Username</label>
    <input placeholder="Username" type="text" value="{{username}}" name="username" required>
  </div>

  <div class="field">
    <label for="password">Password</label>
    <input placeholder="Password" type="password" name="password" required>
  </div>

  <button class="ui blue submit button">Submit</button>
</form>
